@model LoginModel

@{
    ViewBag.Title = "Login Page";
    ViewBag.Active = "Login";
    Layout = "_GuestLayout";
}

<div class="title-header">
    <h2>Log In</h2>
</div>
<div class="content-container">
    <div class="content-section">
        <form asp-action="Login" asp-controller="Account" asp-area="Admin" method="post">
            <input type="hidden" name="returnURL" value="@ViewBag.returnURL" />
            <fieldset class="form-group">
                <legend class="border-bottom mb-4 font-white">Please enter your credentials</legend>
                <div class="form-group">
                    <label asp-for="UserName" class="col-form-label requiredField">Username*</label>
                    <div><span asp-validation-for="UserName" class="text-danger"></span></div>
                    <input asp-for="UserName" type="text" class="form-control" placeholder="Username">
                </div>
                <div id="div_id_password" class="form-group">
                    <label asp-for="Password" class="col-form-label  requiredField">Password*</label>
                    <div><span asp-validation-for="Password" class="text-danger"></span></div>
                    <input asp-for="Password" type="password" class="form-control">
                </div>
            </fieldset>
            <div class="form-group">
                <button class="btn btn-outline-info" type="submit">Login</button>
            </div>
        </form>
        <div class="border-top pt-3">
            <small class="font-white">
                Need An Account?<a class="ml-2" href="~/Register">Sign Up Now</a>
            </small>
        </div>
    </div>
</div>

