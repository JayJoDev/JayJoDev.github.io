@model IEnumerable<CourseHelperUser>
@{
    ViewBag.Title = "List of accounts";
    ViewBag.Active = "List";
}


<main role="main">
    <div class="container">
        <div class="title-header">
            <h1>User Account</h1>
            <br>
            <a class="btn btn-primary" asp-action="Create">Create User</a>
            <a class="btn btn-primary ml-3" asp-action="CreateFaculty">Create Faculty</a>
        </div>
    </div>
    <div class="content-container">
        <div class="text-danger" asp-validation-summary="ModelOnly"></div>
        <table class="table content-table">
            <thead>
                <tr align="center">
                    <th scope="col">First Name</th>
                    <th scope="col">Last Name</th>
                    <th scope="col">Username</th>
                    <th scope="col">Role</th>
                    <th scope="col"></th>
                </tr>
            </thead>
                @foreach (CourseHelperUser user in Model)
                {
            <tr align="center">
                <td><p>@user.FirstName</p></td>
                <td><p>@user.LastName</p></td>
                <td><p>@user.UserName</p></td>
                <td><p>@user.Role</p></td>
                <td>
                    <form asp-action="Delete" asp-area="Admin" asp-route-id="@user.Id" method="post">
                        <a class="btn btn-sm btn-primary" asp-action="Edit" asp-route-id="@user.Id">Edit</a>
                        <button type="submit" class="btn btn-sm btn-danger">Delete</button>
                    </form>
                </td>
            </tr>
                }
        </table>
    </div>
</main>
